<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 6.2.0//EN" "http://www.liferay.com/dtd/liferay-look-and-feel_6_2_0.dtd">

<look-and-feel>
	<compatibility>
		<version>6.2.5+</version>
	</compatibility>
	<theme id="training" name="training-theme" >
		
		<template-extension>vm</template-extension>
		<settings>
			<setting configurable="true" key="portlet-setup-show-borders-default"  type="checkbox"  value="false" />
			<setting configurable="true" key="show-menu" value="true" type="checkbox" />
			<setting configurable="true" key="show-footer" value="true" type="checkbox" />
			<setting configurable="true" key="show-header" value="true" type="checkbox" />
			<setting configurable="true" key="use-header-profil" value="false" type="checkbox" />
			<setting configurable="true" key="show-background" value="false" type="checkbox" />
		</settings>

		<color-scheme id="01" name="Default">
			<css-class>default</css-class>
			<color-scheme-images-path>${images-path}/color_schemes/${css-class}</color-scheme-images-path>
		</color-scheme>
		<color-scheme id="02" name="Dark">
			<css-class>dark</css-class>
		</color-scheme>
		<color-scheme id="03" name="Light">
			<css-class>light</css-class>
		</color-scheme>
		<color-scheme id="04" name="orange">
			<css-class>orange</css-class>
		</color-scheme>
		<color-scheme id="05" name="green">
			<css-class>green</css-class>
		</color-scheme>
	</theme>
</look-and-feel>


