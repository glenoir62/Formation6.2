<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">

	<portlet>
		<portlet-name>hello-world</portlet-name>
		<display-name>Hello World</display-name>
		<portlet-class>
			fr.smile.training.HelloWorldPortlet
		</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/helloworld/view.jsp</value>
		</init-param>
		<init-param>
			<name>edit-template</name>
			<value>/html/helloworld/edit.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>edit</portlet-mode>
		</supports>
		<portlet-info>
			<title>Hello World</title>
			<short-title>Hello World</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>producer</portlet-name>
		<display-name>Producer</display-name>
		<portlet-class>fr.smile.training.ProducerPortlet</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/producer/view.jsp</value>
		</init-param>
		<init-param>
			<name>edit-template</name>
			<value>/html/producer/edit.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>edit</portlet-mode>
		</supports>
		<portlet-info>
			<title>Producer</title>
			<short-title>Producer</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>consumer</portlet-name>
		<display-name>Consumer</display-name>
		<portlet-class>fr.smile.training.ConsumerPortlet</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/consumer/view.jsp</value>
		</init-param>
		<init-param>
			<name>edit-template</name>
			<value>/html/consumer/edit.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>edit</portlet-mode>
		</supports>
		<portlet-info>
			<title>Consumer</title>
			<short-title>Consumer</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
        <supported-processing-event>
            <qname xmlns:x="http://training.smile.fr/events">x:ipc.producteur</qname>
        </supported-processing-event>
	</portlet>
	<portlet>
		<portlet-name>helloworld-mvc</portlet-name>
		<display-name>Helloworld Mvc</display-name>
		<portlet-class>
			fr.smile.training.HelloworldMVCPortlet
		</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/helloworldmvc/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>content.Language</resource-bundle>
		<portlet-info>
			<title>Helloworld Mvc</title>
			<short-title>Helloworld Mvc</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<event-definition>
        <qname xmlns:x="http://training.smile.fr/events">x:ipc.producteur</qname>
        <value-type>java.lang.String</value-type>
    </event-definition>



</portlet-app>